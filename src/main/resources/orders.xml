<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	default-autowire="byType"
	xmlns:c="http://www.springframework.org/schema/c"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.1.xsd">

    <context:component-scan base-package="com.acme"></context:component-scan>

    <bean id="cart" class="com.acme.training.service.ShoppingCart" scope="prototype" c:customer="Sanyi" c:deliveryAddress-ref="addr" c:billingAddress-ref="addr" />
    <bean id="cart2" class="com.acme.training.service.ShoppingCart" scope="prototype" c:customer="Sanyi" c:deliveryAddress-ref="addr" c:billingAddress-ref="addr" />
    
    <bean id="addr" class="com.acme.training.domain.Address" c:street="kit" c:zip="is" c:city="erdekelne" c:country="ez" />

    
</beans>
